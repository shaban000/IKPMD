<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inlog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shaban.jama.eindopdracht.registeer">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="75dp"
        android:id="@+id/registeer_naam"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Type hier u naam." />

    <TextView
        android:text="Naam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/registeer_naam"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:text="Inlognaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/registeer_naam"
        android:layout_alignLeft="@+id/registeer_inlognaam"
        android:layout_alignStart="@+id/registeer_inlognaam" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/registeer_inlognaam"
        android:hint="Typ hier u gebruikernaam."
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/registeer_naam"
        android:layout_alignStart="@+id/registeer_naam" />

    <TextView
        android:text="Wachtwoord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/registeer_inlognaam"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/registeer_wachtwoord"
        android:hint="Typ hier u wachtwoord."
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/registeer_inlognaam"
        android:layout_alignStart="@+id/registeer_inlognaam" />

    <Button
        android:text="Registreer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registeer_button"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/registeer_wachtwoord"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/registeer_errorfield"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/registeer_button"
        android:layout_marginTop="30dp" />

</RelativeLayout>
